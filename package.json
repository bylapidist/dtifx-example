{
  "name": "dtifx-example",
  "version": "0.1.0",
  "private": true,
  "description": "Minimal production-ready DTIFx stack example",
  "engines": {
    "node": "^24.0.0",
    "npm": ">=10"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --check",
    "format:write": "prettier . --write",
    "design-lint": "design-lint lint \"src/**/*.{css,js,jsx,ts,tsx}\" --config design-lint.config.cjs",
    "dtif:validate": "dtifx build validate --config build/dtif-build.config.mjs",
    "dtif:build": "dtifx build generate --config build/dtif-build.config.mjs",
    "dtif:diff": "dtifx diff compare ops/artifacts/diff/baseline.dtif.json tokens/catalog.json --format json --output ops/artifacts/diff/report.json && dtifx diff compare ops/artifacts/diff/baseline.dtif.json tokens/catalog.json",
    "dtif:audit": "dtifx audit run --config audit/dtif-audit.config.mjs --reporter json --reporter markdown --out-dir ops/artifacts/audit",
    "verify": "npm run lint && npm run design-lint"
  },
  "dependencies": {
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@dtifx/audit": "4.1.6",
    "@dtifx/build": "4.1.6",
    "@dtifx/cli": "4.1.6",
    "@dtifx/diff": "4.1.6",
    "@eslint/js": "9.39.2",
    "@lapidist/design-lint": "6.0.6",
    "ajv": "^8.17.1",
    "eslint": "9.39.2",
    "prettier": "3.7.4"
  },
  "type": "module"
}
