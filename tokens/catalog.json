{
  "$schema": "https://dtif.lapidist.net/schema/core.json",
  "$version": "1.0.0",
  "$description": "Consolidated DTIF token bundle for the DTIFx minimal stack example covering foundations, components, and theme overrides.",
  "$extensions": {
    "lapidist.catalog": {
      "sources": [
        "./foundations.json",
        "./components/button.json",
        "./themes/light.json",
        "./themes/dark.json"
      ]
    }
  },
  "clr": {
    "$description": "Canonical colour definitions",
    "brand": {
      "$type": "color",
      "$description": "Primary brand colour ensuring AA contrast on light backgrounds.",
      "$value": {
        "colorSpace": "srgb",
        "components": [
          0.054901960784313725,
          0.3607843137254902,
          0.6784313725490196
        ]
      },
      "$extensions": {
        "lapidist.governance": {
          "owner": "Design Foundations Guild",
          "reviewCadence": "quarterly",
          "sla": "5 business days"
        },
        "lapidist.accessibility": {
          "contrastTarget": "AA",
          "usage": [
            "btn.primary",
            "link.default"
          ]
        }
      }
    },
    "bg": {
      "$type": "color",
      "$description": "Base background colour for light theme contexts.",
      "$value": {
        "colorSpace": "srgb",
        "components": [
          1,
          1,
          1
        ]
      },
      "$extensions": {
        "lapidist.governance": {
          "owner": "Design Foundations Guild",
          "reviewCadence": "quarterly",
          "sla": "5 business days"
        },
        "lapidist.context": {
          "surface": "canvas",
          "theme": "light"
        },
        "lapidist.accessibility": {
          "contrastTarget": "AA",
          "usage": [
            "surface.bg.light"
          ]
        }
      }
    }
  },
  "space": {
    "$description": "Spacing scale tokens",
    "md": {
      "$type": "dimension",
      "$description": "Default medium spacing unit for layout and component padding.",
      "$value": {
        "dimensionType": "length",
        "value": 16,
        "unit": "px"
      },
      "$extensions": {
        "lapidist.governance": {
          "owner": "Design Foundations Guild",
          "reviewCadence": "quarterly",
          "sla": "5 business days"
        },
        "lapidist.accessibility": {
          "touchTarget": "Ensures minimum primary control padding",
          "usage": [
            "space.md",
            "btn.primary.pad"
          ]
        }
      }
    },
    "lg": {
      "$type": "dimension",
      "$description": "Large spacing unit for generous component padding.",
      "$value": {
        "dimensionType": "length",
        "value": 24,
        "unit": "px"
      },
      "$extensions": {
        "lapidist.governance": {
          "owner": "Design Foundations Guild",
          "reviewCadence": "quarterly",
          "sla": "5 business days"
        },
        "lapidist.accessibility": {
          "touchTarget": "Supports elevated hit area targets for large components",
          "usage": [
            "space.lg",
            "btn.primary.pad"
          ]
        }
      }
    }
  },
  "weight": {
    "$description": "Font weight scale",
    "semibold": {
      "$type": "fontWeight",
      "$description": "Semibold weight for primary button text.",
      "$value": 600,
      "$extensions": {
        "lapidist.governance": {
          "owner": "Design Foundations Guild",
          "reviewCadence": "quarterly",
          "sla": "5 business days"
        },
        "lapidist.accessibility": {
          "usage": [
            "weight.semibold",
            "btn.primary.weight"
          ]
        }
      }
    }
  },
  "weightVar": {
    "$description": "CSS-compatible font weight variables",
    "semibold": {
      "$type": "dimension",
      "$description": "Semibold weight exposed as a unitless CSS variable.",
      "$value": {
        "dimensionType": "custom",
        "value": 600,
        "unit": "scalar.unitless"
      },
      "$extensions": {
        "lapidist.governance": {
          "owner": "Design Foundations Guild",
          "reviewCadence": "quarterly",
          "sla": "5 business days"
        },
        "lapidist.accessibility": {
          "usage": [
            "weightVar.semibold",
            "btn.primary.weight"
          ]
        }
      }
    }
  },
  "motion": {
    "$description": "Timing durations for interactive components",
    "btn": {
      "$type": "duration",
      "$description": "Primary button background transition duration.",
      "$value": {
        "durationType": "css.transition-duration",
        "value": 120,
        "unit": "ms"
      },
      "$extensions": {
        "lapidist.governance": {
          "owner": "Design Foundations Guild",
          "reviewCadence": "quarterly",
          "sla": "5 business days"
        },
        "lapidist.accessibility": {
          "usage": [
            "motion.btn",
            "btn.primary.motion"
          ]
        }
      }
    }
  },
  "motionVar": {
    "$description": "CSS-compatible motion variables",
    "btn": {
      "$type": "dimension",
      "$description": "Primary button transition duration exposed for CSS usage.",
      "$value": {
        "dimensionType": "custom",
        "value": 120,
        "unit": "duration.ms"
      },
      "$extensions": {
        "lapidist.governance": {
          "owner": "Design Foundations Guild",
          "reviewCadence": "quarterly",
          "sla": "5 business days"
        },
        "lapidist.accessibility": {
          "usage": [
            "motionVar.btn",
            "btn.primary.motion"
          ]
        }
      }
    }
  },
  "cmp": {
    "$description": "Component abstraction tokens",
    "btn": {
      "$description": "Primary button styling primitives.",
      "$extensions": {
        "lapidist.accessibility": {
          "intent": "Ensures minimum AA contrast in default theme contexts"
        }
      },
      "bg": {
        "$type": "color",
        "$description": "Default primary button background colour.",
        "$value": {
          "colorSpace": "srgb",
          "components": [
            0.054901960784313725,
            0.3607843137254902,
            0.6784313725490196
          ]
        },
        "$extensions": {
          "lapidist.governance": {
            "owner": "Design Systems Guild",
            "reviewCadence": "monthly",
            "sla": "3 business days"
          },
          "lapidist.accessibility": {
            "contrastTarget": "AA",
            "usage": [
              "btn.primary.bg"
            ]
          }
        }
      },
      "bg-hover": {
        "$type": "color",
        "$description": "Hover state background colour with elevated contrast.",
        "$value": {
          "colorSpace": "srgb",
          "components": [
            0.047058823529411764,
            0.3215686274509804,
            0.6039215686274509
          ]
        },
        "$extensions": {
          "lapidist.governance": {
            "owner": "Design Systems Guild",
            "reviewCadence": "monthly",
            "sla": "3 business days"
          },
          "lapidist.accessibility": {
            "contrastTarget": "AAA",
            "usage": [
              "btn.primary.bg-hover"
            ]
          }
        }
      },
      "fg": {
        "$type": "color",
        "$description": "Primary button label colour ensuring contrast on brand backgrounds.",
        "$value": {
          "colorSpace": "srgb",
          "components": [
            1,
            1,
            1
          ]
        },
        "$extensions": {
          "lapidist.governance": {
            "owner": "Design Systems Guild",
            "reviewCadence": "monthly",
            "sla": "3 business days"
          },
          "lapidist.accessibility": {
            "contrastTarget": "AA",
            "usage": [
              "btn.primary.fg"
            ]
          }
        }
      },
      "pad": {
        "$type": "dimension",
        "$description": "Button horizontal padding derived from spacing scale.",
        "$value": {
          "dimensionType": "length",
          "value": 16,
          "unit": "px"
        },
        "$extensions": {
          "lapidist.governance": {
            "owner": "Design Systems Guild",
            "reviewCadence": "monthly",
            "sla": "3 business days"
          },
          "lapidist.accessibility": {
            "touchTarget": "Supports minimum 44px hit area when combined with layout spacing",
            "usage": [
              "btn.primary.pad"
            ]
          }
        }
      }
    }
  },
  "$overrides": [
    {
      "$token": "#/cmp/btn/bg",
      "$when": {
        "theme": "dark"
      },
      "$value": {
        "colorSpace": "srgb",
        "components": [
          0.8392156862745098,
          0.8705882352941177,
          0.9254901960784314
        ]
      }
    },
    {
      "$token": "#/cmp/btn/fg",
      "$when": {
        "theme": "dark"
      },
      "$value": {
        "colorSpace": "srgb",
        "components": [
          0.058823529411764705,
          0.09411764705882353,
          0.14901960784313725
        ]
      }
    },
    {
      "$token": "#/cmp/btn/bg",
      "$when": {
        "theme": "light",
        "accessibility": "high-contrast"
      },
      "$value": {
        "colorSpace": "srgb",
        "components": [
          0.027450980392156862,
          0.2235294117647059,
          0.4588235294117647
        ]
      }
    },
    {
      "$token": "#/cmp/btn/fg",
      "$when": {
        "theme": "light",
        "accessibility": "high-contrast"
      },
      "$value": {
        "colorSpace": "srgb",
        "components": [
          1,
          1,
          1
        ]
      }
    }
  ]
}
