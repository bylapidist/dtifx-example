{
  "$schema": "https://dtif.lapidist.net/schema/core.json",
  "$version": "1.0.0",
  "$description": "Foundational design tokens for the DTIFx minimal stack example covering color and spacing primitives.",
  "color": {
    "$description": "Canonical colour definitions",
    "brand": {
      "$type": "color",
      "$description": "Primary brand colour ensuring AA contrast on light backgrounds.",
      "$value": {
        "colorSpace": "srgb",
        "components": [
          0.054901960784313725,
          0.3607843137254902,
          0.6784313725490196
        ]
      },
      "$extensions": {
        "lapidist.governance": {
          "owner": "Design Foundations Guild",
          "reviewCadence": "quarterly",
          "sla": "5 business days"
        },
        "lapidist.accessibility": {
          "contrastTarget": "AA",
          "usage": [
            "button.primary",
            "link.default"
          ]
        }
      }
    },
    "background": {
      "$type": "color",
      "$description": "Base background colour for light theme contexts.",
      "$value": {
        "colorSpace": "srgb",
        "components": [
          1,
          1,
          1
        ]
      },
      "$extensions": {
        "lapidist.governance": {
          "owner": "Design Foundations Guild",
          "reviewCadence": "quarterly",
          "sla": "5 business days"
        },
        "lapidist.context": {
          "surface": "canvas",
          "theme": "light"
        },
        "lapidist.accessibility": {
          "contrastTarget": "AA",
          "usage": [
            "surface.background.light"
          ]
        }
      }
    }
  },
  "spacing": {
    "$description": "Spacing scale tokens",
    "md": {
      "$type": "dimension",
      "$description": "Default medium spacing unit for layout and component padding.",
      "$value": {
        "dimensionType": "length",
        "value": 16,
        "unit": "px"
      },
      "$extensions": {
        "lapidist.governance": {
          "owner": "Design Foundations Guild",
          "reviewCadence": "quarterly",
          "sla": "5 business days"
        },
        "lapidist.accessibility": {
          "touchTarget": "Ensures minimum primary control padding",
          "usage": [
            "spacing.md",
            "button.primary.padding"
          ]
        }
      }
    },
    "lg": {
      "$type": "dimension",
      "$description": "Large spacing unit for generous component padding.",
      "$value": {
        "dimensionType": "length",
        "value": 24,
        "unit": "px"
      },
      "$extensions": {
        "lapidist.governance": {
          "owner": "Design Foundations Guild",
          "reviewCadence": "quarterly",
          "sla": "5 business days"
        },
        "lapidist.accessibility": {
          "touchTarget": "Supports elevated hit area targets for large components",
          "usage": [
            "spacing.lg",
            "button.primary.padding"
          ]
        }
      }
    }
  },
  "fontWeights": {
    "$description": "Font weight scale",
    "semibold": {
      "$type": "fontWeight",
      "$description": "Semibold weight for primary button text.",
      "$value": 600,
      "$extensions": {
        "lapidist.governance": {
          "owner": "Design Foundations Guild",
          "reviewCadence": "quarterly",
          "sla": "5 business days"
        },
        "lapidist.accessibility": {
          "usage": [
            "fontWeights.semibold",
            "button.primary.fontWeight"
          ]
        }
      }
    }
  },
  "fontWeightVariables": {
    "$description": "CSS-compatible font weight variables",
    "semibold": {
      "$type": "dimension",
      "$description": "Semibold weight exposed as a unitless CSS variable.",
      "$value": {
        "dimensionType": "custom",
        "value": 600,
        "unit": "scalar.unitless"
      },
      "$extensions": {
        "lapidist.governance": {
          "owner": "Design Foundations Guild",
          "reviewCadence": "quarterly",
          "sla": "5 business days"
        },
        "lapidist.accessibility": {
          "usage": [
            "fontWeightVariables.semibold",
            "button.primary.fontWeight"
          ]
        }
      }
    }
  },
  "durations": {
    "$description": "Timing durations for interactive components",
    "button": {
      "$type": "duration",
      "$description": "Primary button background transition duration.",
      "$value": {
        "durationType": "css.transition-duration",
        "value": 120,
        "unit": "ms"
      },
      "$extensions": {
        "lapidist.governance": {
          "owner": "Design Foundations Guild",
          "reviewCadence": "quarterly",
          "sla": "5 business days"
        },
        "lapidist.accessibility": {
          "usage": [
            "durations.button",
            "button.primary.transition"
          ]
        }
      }
    }
  },
  "durationVariables": {
    "$description": "CSS-compatible motion variables",
    "button": {
      "$type": "dimension",
      "$description": "Primary button transition duration exposed for CSS usage.",
      "$value": {
        "dimensionType": "custom",
        "value": 120,
        "unit": "duration.ms"
      },
      "$extensions": {
        "lapidist.governance": {
          "owner": "Design Foundations Guild",
          "reviewCadence": "quarterly",
          "sla": "5 business days"
        },
        "lapidist.accessibility": {
          "usage": [
            "durationVariables.button",
            "button.primary.transition"
          ]
        }
      }
    }
  }
}
